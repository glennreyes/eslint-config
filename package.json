{
  "name": "@glennreyes/eslint-config",
  "version": "1.1.0",
  "description": "Opinionated ESLint config with TypeScript, React, and Next.js support",
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "author": "Glenn Reyes <glenn@glennreyes.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glennreyes/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "typescript",
    "react",
    "nextjs",
    "config"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "default": "./dist/base.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "default": "./dist/react.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "default": "./dist/node.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs.d.ts",
      "default": "./dist/nextjs.js"
    }
  },
  "scripts": {
    "build": "tsup && pnpm run copy-types",
    "copy-types": "cp types/*.d.ts dist/",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@eslint/js": "^9.36.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prefer-arrow-functions": "^3.9.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "typescript-eslint": "^8.45.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
